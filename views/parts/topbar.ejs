<style>
    .topbar {
        position: fixed;
        top: 4px; 
        left: 50%; 
        transform: translateX(-50%); 
        width: fit-content; 
        background-color: rgba(0, 0, 0, 0.5); 
        padding: 8px 15px; 
        display: flex;
        justify-content: center; 
        align-items: center;
        gap: 20px; 
        z-index: 1000;
        border-radius: 20px; 
    }
    .topbar a {
        padding: 5px 10px;
        border-radius: 15px;
        transition: background-color 0.3s ease;
    }
    .topbar a:hover {
        background-color: rgba(255, 255, 255, 0.1); 
    }
    .topbar a.active {
        background-color: rgba(255, 255, 255, 0.1); 
    }
    .topbar-icon {
        width: 25px;
        height: 25px;
        fill: white;
        cursor: pointer;
    }
    .topbar-icon:hover {
        fill: #cccccc;
    }
</style>
