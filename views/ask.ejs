<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xylara</title>
    <script src="https://app.rybbit.io/api/script.js" data-site-id="8b65ec526edf" defer></script>
    <link rel="prefetch" href="/scram/scramjet.all.js" />
    <script src="/scram/scramjet.all.js"></script>
    <script src="/baremux"></script>
    <script src="/epoxy"></script>
    <link rel="icon" type="image/png" src="/assets/favicon.png">
    <script src="/uv/uv.bundle.js"></script>
    <script src="/uv/uv.config.js"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
        }
        .ai-screen {
            background-color: rgba(0, 0, 0, 0.5); 
            padding: 30px;
            border-radius: 20px;
            width: 90%;
            max-width: 600px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
        }
        .ai-screen label {
            font-weight: bold;
        }
        .ai-screen select, .ai-screen button, .ai-screen textarea {
            padding: 10px;
            border-radius: 10px;
            border: none;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 16px;
            cursor: pointer;
            box-sizing: border-box;
            width: 100%;
        }
        .ai-screen select option {
            background-color: #333; 
            color: white;
        }
        .ai-screen button {
            cursor: pointer;
        }
        .ai-screen button:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
        .warning {
            padding: 10px;
            border-radius: 10px;
            background-color: rgba(255, 0, 0, 0.7);
            color: white;
            text-align: center;
            display: none;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const defaultBg = '/assets/backgrounds/foggy-forest.png';
            let bg = localStorage.getItem('bg');
            if (!bg) {
                bg = defaultBg;
                localStorage.setItem('bg', bg);
            }
            document.body.style.backgroundImage = `url('${bg}')`;
        });

        const savedFont = localStorage.getItem('font');
        if (savedFont) {
            document.body.style.fontFamily = savedFont;
        }
    </script>
</head>
<body>
    <%- include('parts/topbar.ejs') %>
    <div class="ai-screen">
        <h2>Ask AI</h2>
        <div id="api-key-warning" class="warning"></div>

        <label for="ai-service">AI Service:</label>
        <select id="ai-service">
            <option value="groq">Groq</option>
            <option value="gemini">Gemini</option>
        </select>

        <label for="ai-model">Model:</label>
        <select id="ai-model">
            <!-- Models populated by JS -->
        </select>

        <textarea id="ai-prompt" placeholder="Enter your prompt here..." rows="5"></textarea>
        
        <button id="submit-prompt">Submit</button>

        <div id="ai-response" style="white-space: pre-wrap; padding: 10px; border-radius: 10px; background-color: rgba(255, 255, 255, 0.1); min-height: 50px;"></div>
    </div>

    <script>
        const GROQ_MODELS = [
            { value: 'meta-llama/llama-4-maverick-17b-128e-instruct', text: 'Llama 4 Maverick' },
            { value: 'meta-llama/llama-4-scout-17b-16e-instruct', text: 'Llama 4 Scout' }
        ];
        const GEMINI_MODELS = [
            { value: 'latest', text: 'Latest' }
        ];

        const aiServiceSelect = document.getElementById('ai-service');
        const aiModelSelect = document.getElementById('ai-model');
        const apiKeyWarning = document.getElementById('api-key-warning');

        function populateModels(service) {
            aiModelSelect.innerHTML = '';
            const models = service === 'groq' ? GROQ_MODELS : GEMINI_MODELS;
            models.forEach(model => {
                const option = document.createElement('option');
                option.value = model.value;
                option.textContent = model.text;
                aiModelSelect.appendChild(option);
            });
        }

        function validateApiKey() {
            const apiKey = localStorage.getItem('ai-api-key');
            const selectedService = aiServiceSelect.value;
            
            apiKeyWarning.style.display = 'none';
            apiKeyWarning.textContent = '';

            if (!apiKey) {
                apiKeyWarning.textContent = 'API Key not set. Please set your AI API key in settings.';
                apiKeyWarning.style.display = 'block';
                return false;
            }

            if (selectedService === 'groq' && !apiKey.startsWith('gsk')) {
                apiKeyWarning.textContent = 'Incorrect API Key format for Groq. Please ensure your key starts with "gsk" (e.g., gsk... ) or check your settings.';
                apiKeyWarning.style.display = 'block';
                return false;
            }

            if (selectedService === 'gemini' && !apiKey.startsWith('AI')) {
                apiKeyWarning.textContent = 'Incorrect API Key format for Gemini. Please ensure your key starts with "AI" (e.g., AI... ) or check your settings.';
                apiKeyWarning.style.display = 'block';
                return false;
            }

            return true;
        }

        populateModels(aiServiceSelect.value);
        validateApiKey();

        aiServiceSelect.addEventListener('change', () => {
            populateModels(aiServiceSelect.value);
            validateApiKey();
        });

        document.getElementById('submit-prompt').addEventListener('click', async () => {
            if (!validateApiKey()) {
                document.getElementById('ai-response').textContent = 'Cannot submit. Please fix API Key issue.';
                return;
            }

            const service = aiServiceSelect.value;
            const model = aiModelSelect.value;
            const prompt = document.getElementById('ai-prompt').value.trim();
            const apiKey = localStorage.getItem('ai-api-key');
            const responseDiv = document.getElementById('ai-response');
            const submitButton = document.getElementById('submit-prompt');

            if (!prompt) {
                responseDiv.textContent = 'Please enter a prompt.';
                return;
            }

            submitButton.disabled = true;
            responseDiv.textContent = 'Loading...';

            try {
                const response = await fetch('/api/ask', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ service, model, prompt, apiKey })
                });

                const data = await response.json();

                if (response.ok) {
                    responseDiv.textContent = data.response;
                } else {
                    responseDiv.textContent = `Error: ${data.error || 'Unknown error occurred.'}`;
                }
            } catch (error) {
                console.error('Fetch error:', error);
                responseDiv.textContent = 'An unexpected error occurred while communicating with the server.';
            } finally {
                submitButton.disabled = false;
            }
        });
    </script>
</body>
</html>