 <%- include('../parts/topbar') %>
<%- include('../parts/sidebar') %>
<script src="https://app.rybbit.io/api/script.js" data-site-id="8b65ec526edf" defer></script>
<title>Xylara</title>

<div class="settings-container">
    <div class="setting-item">
        <label for="background-image">Background Image</label>
        <select id="background-image">
            <option value="/assets/backgrounds/foggy-forest.png">Foggy Forest</option>
            <option value="/assets/backgrounds/floating-tree.png">Floating Tree</option>
            <option value="/assets/backgrounds/stormy-rocket.png">Stormy Rocket</option>
            <option value="/assets/backgrounds/end-of-the-world.png">End of the World</option>
        </select>
    </div>
</div>

<div class="settings-container">
    <div class="setting-item">
        <label for="ai-api-key">AI API Key</label>
        <input type="text" id="ai-api-key" placeholder="Enter your API key">
    </div>
 
<style>
    body {
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        color: white;
        margin: 0;
        padding: 0;
        display: flex;
        margin-left: 200px;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
    }

    .settings-container {
        background-color: rgba(0, 0, 0, 0.5);
        padding: 20px;
        border-radius: 10px;
        width: 80%;
        max-width: 600px;
        margin-top: 65px;
    }

    .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

    .setting-item:last-child {
        margin-bottom: 0;
    }

    .setting-item label {
        font-size: 1.1em;
        margin-right: 10px;
    }

    .setting-item select {
        padding: 8px;
        border-radius: 5px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1em;
        cursor: pointer;
    }
    .setting-item input[type="text"] {
        padding: 8px;
        border-radius: 5px;
        border: 1px solid rgba(255, 255, 255, 0.3);
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        font-size: 1em;
        width: 50%;
    }

    .setting-item select option {
        background-color: #333;
        color: white;
    }

</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const savedFont = localStorage.getItem('font');
        if (savedFont) {
            document.body.style.fontFamily = savedFont;
        }

        const defaultBg = '/assets/backgrounds/foggy-forest.png';
        let bg = localStorage.getItem('bg');
        if (!bg) {
            bg = defaultBg;
            localStorage.setItem('bg', bg);
        }
        document.body.style.backgroundImage = `url('${bg}')`;

        const backgroundImageSelect = document.getElementById('background-image');
        backgroundImageSelect.value = bg;
        backgroundImageSelect.addEventListener('change', (event) => {
            const selectedBg = event.target.value;
            localStorage.setItem('bg', selectedBg);
            document.body.style.backgroundImage = `url('${selectedBg}')`;
        });

        const aiApiKeyInput = document.getElementById('ai-api-key');

        if (!localStorage.getItem('ai-api-key')) {
            localStorage.setItem('ai-api-key', '');
        }

        aiApiKeyInput.value = localStorage.getItem('ai-api-key');

        aiApiKeyInput.addEventListener('input', (event) => {
            localStorage.setItem('ai-api-key', event.target.value);
        });
    });
</script>